<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.AddMedication"
    android:layout_margin="10dp"
    >


    <EditText
        android:id="@+id/medication_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Medication Brand..."
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/chemical_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chemical Name..."
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/medication_dosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dosage..."
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/medication_doseform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DoseForm..."
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/medicationButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:text="Add medication" />


    <Button
        android:id="@+id/backButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:onClick="goBackButton"
        android:text="Back" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

</LinearLayout>