<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GraphActivity"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="This is for graph area..."
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/HomeButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Patients"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:onClick="screenPatients"
        />

    <Button
        android:id="@+id/finaliseButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Finalise"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:onClick="feedbackPage"
        />

    <Button
        android:id="@+id/aucButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="AUC"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        />

    <Button
        android:id="@+id/medicationButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Add medication"
        android:layout_gravity="center"
        android:onClick="screenMedication"
        android:layout_marginTop="20sp"
        />

</LinearLayout>